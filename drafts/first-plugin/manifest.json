{
  "name": "chrome-plugin",
  "version": "1.0",
  "description": "Plugin for XSS detection",
  "manifest_version": 3,
  "background": {
    "service_worker": "bg.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_title": "Detect XSS",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
  },
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  }
}
