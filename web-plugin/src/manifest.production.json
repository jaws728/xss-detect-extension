{
    "manifest_version": 3,
    "name": "XSS-det",
    "description": "Detect XSS attacks",
    "version": "1.0.0",
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "devtools_page": "devtools.html",
    "permissions": [
        "activeTab",
        "webNavigation",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}