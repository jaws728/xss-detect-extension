{
    "manifest_version": 3,
    "name": "XSS-det",
    "description": "Detect XSS attacks",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "devtools_page": "devtools.html",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "/assets/icon.png",
        "48": "/assets/icon.png",
        "128": "/assets/icon.png" 
    }
}